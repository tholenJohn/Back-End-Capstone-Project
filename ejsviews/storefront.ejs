<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%- include ../partials/header %>
    <link rel="stylesheet" type="text/css" href="../public/css/basiclayout.css">
    <link rel="stylesheet" href="css/styles.css?v=1.0">
    <title>Serinde</title>

</head>

<body>

    <% include ../partials/nav %>

    

    <div class="container-fluid left_column">
        <div class="row">
            <div class="col-3  col_adjust left">
                <!-- Category should be listed here -->
                <p>
                    Category should be listed here (not inside a dropdown)
                    Use CSS to design your dropdown if you want to.
                    <br />
                    The border color is to give you an idea of the dimension of each of the columns and rows.
                </p>
                
            </div>
            <div class="col-7 col_adjust right">
                <% for(let i = 0; i < uniqueCategories.length; i++) { %>
                    <div class="row">
                            <h3> <%= uniqueCategories[i] %> </h3>
                            <hr>
                            <!-- slidable row of random 10 items of this category loaded into 10 cards -->
                            <div>
                                    
                                <% products.forEach(product => { %>
                                    
                                        <% if (product.data().ProductCategory === uniqueCategories[i]) { %>
                                    <div class="oneCard">
                                        <div class="card" style="width: 18rem;">
                                            <img class="card_row" class="card-img-top" src="/./public/images/<%=product.data().ProductImage %>" alt="Missing Image">
                                            <div class="card-body">
                                                <h5 class="card-title"> <%= product.data().ProductTitle %> </h5>
                                                <p class="card-text"> <%= product.data().ProductDescription %> </p>
                                                <a href="#" class="card-link">See Item</a>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                <% }) %>
                            
                        </div>
                    </div>
                <%   } %>
        </div>
    </div>

    <%- include ../partials/scripts %>
</body>

</html>